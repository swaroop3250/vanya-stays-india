generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  name             String
  email            String    @unique
  passwordHash     String
  role             String
  avatarUrl        String?
  refreshTokenHash String?
  createdAt        DateTime  @default(now())
  bookings         Booking[]
  reviews          Review[]
}

model Destination {
  id        String  @id @default(cuid())
  name      String
  state     String
  imageUrl  String
  tagline   String
  hotels    Hotel[]
}

model Hotel {
  id            String       @id @default(cuid())
  destination   Destination  @relation(fields: [destinationId], references: [id])
  destinationId String
  name          String
  city          String
  state         String
  pincode       String
  images        String
  pricePerNight Int
  rating        Float
  reviewCount   Int
  amenities     String
  propertyType  String
  badges        String
  description   String
  highlights    String
  roomTypes     RoomType[]
  bookings      Booking[]
  reviews       Review[]
}

model RoomType {
  id        String @id @default(cuid())
  hotel     Hotel  @relation(fields: [hotelId], references: [id])
  hotelId   String
  name      String
  price     Int
  maxGuests Int
  bedType   String
  amenities String
  imageUrl  String
}

model Booking {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  hotel      Hotel    @relation(fields: [hotelId], references: [id])
  hotelId    String
  checkIn    DateTime
  checkOut   DateTime
  guests     Int
  rooms      Int
  totalAmount Float
  gstAmount   Float
  status     String
  createdAt  DateTime @default(now())
}

model Review {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  hotel     Hotel    @relation(fields: [hotelId], references: [id])
  hotelId   String
  rating    Float
  comment   String
  tripType  String
  createdAt DateTime @default(now())
}
